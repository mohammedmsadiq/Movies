<?xml version="1.0" encoding="UTF-8"?>
<Grid
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:pr="clr-namespace:ProgressRingControl.Forms.Plugin;assembly=ProgressRing.Forms.Plugin"
    x:Class="movies.Controls.PercentageProgressControlView"
    VerticalOptions="FillAndExpand"
    HorizontalOptions="FillAndExpand">
    <ffimageloading:CachedImage
        x:Name="Poster"
        Aspect="AspectFill"
        Source="{Binding poster_path, Converter={StaticResource ImageStringFormatConverter}}" />
    <Frame
        HasShadow="True"
        CornerRadius="16"
        Padding="0"
        BackgroundColor="White"
        Margin="10"
        HeightRequest="32"
        WidthRequest="32"
        VerticalOptions="EndAndExpand"
        HorizontalOptions="EndAndExpand">
        <Grid
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand">
            <pr:ProgressRing
                HeightRequest="30"
                WidthRequest="30"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                RingThickness="2"
                Progress="{Binding decimal_popularity}" />
            <Label
                FontSize="10"
                TextColor="Black"
                Text="{Binding rounded_popularity}"
                VerticalOptions="Center"
                HorizontalOptions="Center" />
        </Grid>
    </Frame>
</Grid>
